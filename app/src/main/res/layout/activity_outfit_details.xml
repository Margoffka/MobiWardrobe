<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".outfitupload.CreateOutfitActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageButton
            android:id="@+id/bt_show_uploads"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:background="@color/my_purple"
            android:contentDescription="Revert"
            android:src="@drawable/ic_baseline_reply_24"
            android:layout_gravity="center_vertical|start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание"
            android:textAlignment="center"
            android:textColor="@color/very_dark_purple"
            android:textSize="28sp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/bt_details_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#CD0606"
            android:contentDescription="Delete"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_gravity="center_vertical|end"/>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/tv_outfit_details_name"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/purple_border"
        android:hint="Введите название комплекта"
        android:padding="16dp"
        android:textColor="@color/my_purple"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_outfit_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_outfit_details_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="0dp"
        android:scrollbars="horizontal" />

</RelativeLayout>