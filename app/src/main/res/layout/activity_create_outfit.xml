<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".outfit.CreateOutfitActivity">

    <EditText
        android:id="@+id/et_outfit_name_upload"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/purple_border"
        android:hint="Введите название комплекта"
        android:padding="16dp"
        android:textColor="@color/my_purple" />

    <Button
        android:id="@+id/bt_outfit_save"
        android:layout_width="363dp"
        android:layout_height="62dp"
        android:layout_alignTop="@+id/et_outfit_name_upload"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="17dp"
        android:text="Сохранить"
        android:textSize="18sp"
        app:cornerRadius="20dp" />


    <Button
        android:id="@+id/bt_outfit_add"
        android:layout_width="363dp"
        android:layout_height="62dp"
        android:layout_below="@+id/bt_outfit_save"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="11dp"
        android:text="Добавить"
        android:textSize="18sp"
        app:cornerRadius="20dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_show_elements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseImages"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="0dp"
        android:scrollbars="horizontal" />

    <Button
        android:id="@+id/chooseImages"
        android:layout_width="363dp"
        android:layout_height="62dp"
        android:layout_below="@+id/bt_outfit_add"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="11dp"
        android:text="Выбрать из галереи"
        android:textSize="18sp"
        app:cornerRadius="20dp" />


</RelativeLayout>